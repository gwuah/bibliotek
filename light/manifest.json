{
  "manifest_version": 3,
  "name": "Light",
  "version": "1.0",
  "description": "A simple extension to highlight text on web pages.",
  "permissions": ["storage", "activeTab", "scripting", "tabs", "contextMenus"],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://127.0.0.1:3000/*",
    "http://localhost:5678/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
